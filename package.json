{
  "name": "react-express-postgres-heroku",
  "version": "1.0.0",
  "engines": {
    "node": "8.x.x",
    "npm": "5.x.x"
  },
  "private": true,
  "description": "Create React App with Express API and Postgres in Heroku",
  "scripts": {
    "install:frontend": "cd frontend && npm install",
    "install:backend": "cd server && npm install",
    "postinstall": "run-p install:*",
    "start:frontend": "cd frontend && npm start",
    "start:backend": "cd server && npm start",
    "start:dev": "npm-run-all --parallel start:frontend start:backend",
    "heroku-postbuild": "cd frontend && npm run build",
    "start": "cd server && NODE_ENV=production node server.js"
  },
  "author": "Ari Autio <ari.autio@iki.fi>",
  "license": "MIT",
  "devDependencies": {
    "npm-run-all": "^4.1.5"
  },
  "cacheDirectories": [
    "node_modules",
    "frontend/node_modules",
    "server/node_modules"
  ]
}
